<h1>Rotten Mangoes</h1>

  <%= link_to "Submit a movie!", new_movie_path %>

<hr>

<div class="search-bar">
  <%= form_tag movies_search_path, method: :get do %>
    <%= text_field_tag :search, nil, placeholder: "Search by title", class: "search-bar" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image_url(:medium).to_s), movie_path(movie), class: 'movie-image' %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= formatted_date(movie.release_date) %> | <%= movie.average_rating %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>