<%= form_for @movie, html: { multipart: true } do |f| %>
  <%= @movie.errors[:title].first %>
  <%= f.text_field :title, placeholder: "Title" %><br>

  <%= @movie.errors[:release_date].first %>
  <%= f.text_field :release_date, placeholder: "Release date" %><br>

  <%= @movie.errors[:director].first %>
  <%= f.text_field :director, placeholder: "Director" %><br>

  <%= @movie.errors[:runtime_in_minutes].first %>
  <%= f.text_field :runtime_in_minutes, placeholder: "Runtime in minutes" %><br>

  <%= @movie.errors[:image].first %>
  <%= f.label :image, value: "Upload an image" %>
  <%= f.file_field :image %><br>

  <%= @movie.errors[:description].first %>
  <%= f.text_area :description, placeholder: "Description" %><br>
  <%= f.submit %>
<% end %>