
<%= link_to image_tag(@movie.poster_image_url), movie_path(@movie) %>
<h1 class="show-movie-title"><%= @movie.title %></h1>
<h3 class="show-movie-release-date"><%= formatted_date(@movie.release_date) %></h3>
<p class="show-movie-director"><%= @movie.director %></p>
<p class="show-movie-description"><%= @movie.description %></p>


<% if current_user %>
  <div class="new-review-form">
    <% render partial: "reviews/partials/form" %>
  </div>
<% else %>
  <p><%= link_to "Sign Up", new_user_path %> or <%= link_to "Login", new_session_path %> to write a review!</p>
<% end %>

<div class="show-movie-reviews">
  <p><%= review.text %></p>
  <p><%= review.rating_out_of_ten %>/10</p>
  <small>- <%= review.user.email %></small><br>
</div>