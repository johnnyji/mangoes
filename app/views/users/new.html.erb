<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <%= @user.errors[:first_name].first %>
  <%= f.text_field :first_name, placeholder: "First Name" %><br>

  <%= @user.errors[:last_name].first %>
  <%= f.text_field :last_name, placeholder: "Last Name" %><br>

  <%= @user.errors[:email].first %>
  <%= f.text_field :email, placeholder: "Your email" %><br>

  <%= @user.errors[:password].first %>
  <%= f.password_field :password, placeholder: "Enter your password" %><br>

  <%= @user.errors[:password_confirmation].first %>
  <%= f.password_field :password_confirmation, placeholder: "Re-enter your password" %><br>

  <%= f.submit %>
<% end %>